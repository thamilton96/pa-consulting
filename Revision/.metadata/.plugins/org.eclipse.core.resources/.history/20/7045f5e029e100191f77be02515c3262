package revision;

public class Temperature {

	public static void main(String[] args) {
		
		Temperature temperature = new Temperature();
		
		boolean icyHot = temperature.icyHot(120,  -1);
		System.out.println(icyHot);
		
		boolean icyHot1 = temperature.icyHot(-1,  120);
		System.out.println(icyHot1);
		
		boolean icyHot2 = temperature.icyHot(2,  120);
		System.out.println(icyHot2);
	
	}
	
	public boolean icyHot(int temperature1, int temperature2) {
		System.out.println("");
		
		boolean result = true;
		
		if(temperature1 < 0 && temperature2 > 100) {
			result = true;
		}
		else {
			result = false;
		}
		
		return result;
	}

}
