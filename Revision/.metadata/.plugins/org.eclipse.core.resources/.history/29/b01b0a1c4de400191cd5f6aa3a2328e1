package revision;
/*Given a string of even length, return a string made of the middle
two chars, so the string "string" yields "ri". The string length will
be at least 2.

middleTwo("string") -> "ri"
middleTwo("code") -> "od"
middleTwo("Practice") -> "ct"
*/

public class String2 {
	
	public String middleTwo(String str) {
		
		String2 string2 = new String2();
		
		String outcome = string2.middleTwo("string");
		System.out.println(outcome);
		
		String outcome1 = string2.middleTwo("code");
		System.out.println(outcome1);
		
		String outcome2 = string2.middleTwo("Practice");
		System.out.println(outcome2);
		
		int length = str.length() / 2;
		
		String newString = str.substring(length - 1,length +1 );
		
		return newString;
	}
}
;