		boolean result = true;
		
		first get index 0 or 1 of str
		
		then check if starts with char
		
		String word = "";
		String subCharacter = str.substring(0, 2);
		System.out.println(subCharacter);
		
		if(str.startsWith("bad")) {
			return true;
		}
		
		return result;
	}

}
