	public String everyNth(String word,int pickNumber) {
		String newString = "";

		for(int index = 0; index < word.length(); index+=pickNumber) {
			//index = index +2;
			System.out.println(word.charAt(index));
			newString += word.charAt(index);
			System.out.println(newString);
		}

		return newString;

	}

